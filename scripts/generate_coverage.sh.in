#! /bin/bash

ctest -T coverage
lcov --capture --directory @CMAKE_BINARY_DIR@/Testing/CoverageInfo/ --directory @CMAKE_BINARY_DIR@/src/libraries/  --output-file=@CMAKE_BINARY_DIR@/coverage.info --exclude 'inja/*' --exclude '*inja/*' --exclude '@CMAKE_BINARY_DIR@/src/*' --exclude '*rwidgets/editors/sharededitor/*' --exclude '/usr/include/*' --exclude '*include/Qt*' --exclude '*autogen*' --exclude '*format_OO_oasis_*'
genhtml coverage.info --output-directory=@CMAKE_BINARY_DIR@/covres
firefox @CMAKE_BINARY_DIR@/covres/index.html
